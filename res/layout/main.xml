<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <EditText android:layout_width="wrap_content" android:id="@+id/textInputTop" android:layout_height="wrap_content">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/searchBtn" android:text="@android:string/search_go"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/insertBtn" android:text="Insert Beer"></Button>
</TableLayout>
